<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/home_card_corner_radius"
        app:cardElevation="@dimen/home_card_elevation"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/home_cardview_padding">

            <TextView
                android:id="@+id/home_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nima_title_text_color"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/home_title_text_size" />

            <TextView
                android:id="@+id/home_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_title"
                android:layout_alignParentStart="true"
                android:textColor="@color/nima_details_text_color"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/home_items_margin"
                android:textSize="@dimen/home_details_text_size" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_details"
            android:layout_marginTop="@dimen/home_items_margin"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/home_cardview_padding"
            android:paddingRight="@dimen/home_cardview_padding">

            <ImageButton
                android:id="@+id/home_magnet"
                android:layout_width="@dimen/home_magnet_icon_size"
                android:layout_height="@dimen/home_magnet_icon_size"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/magnet" />
        </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
