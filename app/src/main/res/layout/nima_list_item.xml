<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/home_card_corner_radius"
    app:cardElevation="@dimen/home_card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/home_cardview_padding">

        <TextView
            android:id="@+id/nima_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/nima_title_text_color"
            android:textSize="@dimen/home_title_text_size" />

        <TextView
            android:id="@+id/nima_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nima_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/home_items_margin"
            android:textColor="@color/nima_details_text_color"
            android:textSize="@dimen/home_details_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nima_details"
            android:layout_marginTop="@dimen/home_items_margin"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/home_cardview_padding"
            android:paddingRight="@dimen/home_cardview_padding">

            <ImageButton
                android:id="@+id/nima_magnet"
                android:layout_width="@dimen/nima_magnet_icon_size"
                android:layout_height="@dimen/nima_magnet_icon_size"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/magnet" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
