<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cilicat_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/home_card_corner_radius"
    app:cardElevation="@dimen/home_card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/home_cardview_padding">

        <LinearLayout
            android:id="@+id/cililian_item_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/home_items_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cilicat_image"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/image_bg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/home_items_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cilicat_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/title_text_color"
                    android:textSize="@dimen/home_title_text_size" />

                <TextView
                    android:id="@+id/cilicat_attribute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/home_items_margin"
                    android:textColor="@color/details_text_color"
                    android:textSize="@dimen/home_details_text_size" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/cilicat_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cililian_item_bar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/home_items_margin"
            android:textColor="@color/details_text_color"
            android:textSize="@dimen/home_details_text_size" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
